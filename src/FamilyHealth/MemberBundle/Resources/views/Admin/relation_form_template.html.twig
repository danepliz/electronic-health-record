<form method="post" name="family_member_form" action="" class="form-horizontal form-label-left">
    <div class="col-md-12 col-xs-12 col-lg-12">
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.name) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.age) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.age) }}
                {{ form_errors(form.age) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.gender) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.gender) }}
                {{ form_errors(form.gender) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.bloodGroup) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.bloodGroup) }}
                {{ form_errors(form.bloodGroup) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.mobile) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.mobile) }}
                {{ form_errors(form.mobile) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.phone) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.phone) }}
                {{ form_errors(form.phone) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.address) }}</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                {{ form_widget(form.address) }}
                {{ form_errors(form.address) }}
            </div>
        </div>

    </div>


    <div class="col-md-12 col-xs-12 col-lg-12">
        <input class="btn btn-default" type="submit" value="ADD" />
    </div>

</form>