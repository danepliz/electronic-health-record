{% extends 'FamilyHealthAdminBundle::layout.html.twig' %}

{% block content %}

    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel tile">
            <div class="x_title">
                <h2>Members Count</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {#<h4>App Usage across versions</h4>#}
                <div class="widget_summary">
                    <div class="w_left w_25">
                        <span>Total</span>
                    </div>
                    <div class="w_center w_55">
                        <div class="progress">
                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                                <span class="sr-only">100</span>
                            </div>
                        </div>
                    </div>
                    <div class="w_right w_20">
                        <span>{{ member_counts.total }}</span>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget_summary">
                    <div class="w_left w_25">
                        <span>Premium</span>
                    </div>
                    <div class="w_center w_55">
                        <div class="progress">
                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="{{ member_counts.premium_percent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ member_counts.premium_percent }}%;">
                                <span class="sr-only">{{ member_counts.premium_percent }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="w_right w_20">
                        <span>{{ member_counts.premium }}</span>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget_summary">
                    <div class="w_left w_25">
                        <span>Others</span>
                    </div>
                    <div class="w_center w_55">
                        <div class="progress">
                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="{{ member_counts.non_premium_percent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ member_counts.non_premium_percent }}%;">
                                <span class="sr-only">{{ member_counts.non_premium_percent }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="w_right w_20">
                        <span>{{ member_counts.non_premium }}</span>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>
    </div>

